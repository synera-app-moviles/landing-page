---
const imageUrl = "https://i.pinimg.com/736x/02/f6/45/02f6459ada4bb2ea095a648b06320c61.jpg";
---

<section class="features-section py-20 px-6 bg-gradient-to-b from-black to-gray-900">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-6">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-purple-500 mb-4 font-saira" data-i18n="features.title">
        Main Features
      </h2>
      <p class="text-gray-400 font-manrope italic" data-i18n="features.subtitle">
        This section is a quick overview that links to the Product page.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-12">
      <!-- Feature 1: Announcements -->
      <div class="feature-card bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-purple-500/30 transition-all duration-300 transform hover:-translate-y-2">
        <div class="h-48 overflow-hidden">
          <img src={imageUrl} alt="Announcements" class="w-full h-full object-cover" />
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-3 font-saira" data-i18n="features.feature1Title">
            Announcements and News
          </h3>
          <p class="text-gray-700 text-sm font-manrope" data-i18n="features.feature1Desc">
            A formal space to publish vital announcements and ensure they reach everyone.
          </p>
        </div>
      </div>

      <!-- Feature 2: Events -->
      <div class="feature-card bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-purple-500/30 transition-all duration-300 transform hover:-translate-y-2">
        <div class="h-48 overflow-hidden">
          <img src={imageUrl} alt="Events" class="w-full h-full object-cover" />
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-3 font-saira" data-i18n="features.feature2Title">
            Event Management
          </h3>
          <p class="text-gray-700 text-sm font-manrope" data-i18n="features.feature2Desc">
            Create and manage meetings, trainings and corporate events easily.
          </p>
        </div>
      </div>

      <!-- Feature 3: Chats -->
      <div class="feature-card bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-purple-500/30 transition-all duration-300 transform hover:-translate-y-2">
        <div class="h-48 overflow-hidden">
          <img src={imageUrl} alt="Chats" class="w-full h-full object-cover" />
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-3 font-saira" data-i18n="features.feature3Title">
            Group Chats
          </h3>
          <p class="text-gray-700 text-sm font-manrope" data-i18n="features.feature3Desc">
            Flexible work groups by department or project, 100% professional.
          </p>
        </div>
      </div>
    </div>

    <div class="text-center">
      <a href="/product" class="inline-block px-8 py-4 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105 font-saira" data-i18n="features.ctaSecondary">
        Discover all features
      </a>
    </div>
  </div>
</section>

<script>
  import { translate } from '../../i18n/utils';

  function updateFeaturesTranslations() {
    const lang = localStorage.getItem('language') || 'en';
    const elements = document.querySelectorAll('.features-section [data-i18n]');
    
    elements.forEach((el) => {
      const key = el.getAttribute('data-i18n');
      if (key) {
        el.textContent = translate(lang, key);
      }
    });
  }

  document.addEventListener('DOMContentLoaded', updateFeaturesTranslations);
  window.addEventListener('languagechange', updateFeaturesTranslations);
</script>
