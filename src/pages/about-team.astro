---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header/Header.astro';
import Footer from '../components/Footer.astro';

const teamMembers = [
  { username: 'ElvDev05', name: 'ElvDev05' },
  { username: 'DanieGF1', name: 'DanieGF1' },
  { username: 'LuisDiazpe', name: 'LuisDiazpe' },
  { username: 'Necxuz18', name: 'Necxuz18' },
  { username: 'Neilcuri7', name: 'Neilcuri7' }
];
---

<Layout title="Centralis - Our Team">
  <Header />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 px-6 bg-gradient-to-b from-black to-gray-900">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 font-saira" data-i18n="team.title">
          Meet Our Team
        </h1>
        <p class="text-xl text-gray-300 mb-4 max-w-3xl mx-auto font-manrope" data-i18n="team.subtitle">
          The talented people behind Centralis
        </p>
        <p class="text-lg text-gray-400 max-w-3xl mx-auto font-manrope" data-i18n="team.description">
          We are Synera, a startup dedicated to building solutions that improve internal communication for SMEs.
        </p>
      </div>
    </section>

    <!-- Team Members Grid -->
    <section class="py-20 px-6 bg-black">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 md:gap-6">
          {teamMembers.map((member) => (
            <div class="team-card bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl overflow-hidden border border-gray-700 hover:border-purple-500 transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl hover:shadow-purple-500/20">
              <!-- GitHub Avatar -->
              <div class="h-32 bg-gray-800 overflow-hidden">
                <img 
                  src={`https://github.com/${member.username}.png`} 
                  alt={member.name}
                  class="w-full h-full object-cover"
                />
              </div>
              
              <!-- Member Info -->
              <div class="p-3">
                <h3 class="text-sm md:text-base font-bold text-white mb-1 font-saira truncate">
                  {member.name}
                </h3>
                <p class="text-purple-400 text-xs mb-3 font-saira font-bold" data-i18n="team.role">
                  Developer
                </p>
                
                <!-- GitHub Link -->
                <a 
                  href={`https://github.com/${member.username}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center gap-1 px-2 py-1.5 bg-purple-600 hover:bg-purple-700 text-white text-xs rounded-lg transition-all duration-300 transform hover:scale-105 font-semibold w-full"
                >
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  <span data-i18n="team.githubProfile" class="hidden md:inline">GitHub Profile</span>
                  <span class="md:hidden">GitHub</span>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Company Info -->
    <section class="py-20 px-6 bg-gradient-to-b from-gray-900 to-black">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-gradient-to-br from-purple-900/30 to-gray-900 p-12 rounded-2xl border border-purple-500/50">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 font-saira">
            Synera
          </h2>
          <p class="text-lg text-gray-300 font-manrope">
            Building the future of internal communication for small and medium enterprises.
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  import { translate } from '../i18n/utils';

  function updateTeamTranslations() {
    const lang = localStorage.getItem('language') || 'en';
    const elements = document.querySelectorAll('[data-i18n]');
    
    elements.forEach((el) => {
      const key = el.getAttribute('data-i18n');
      if (key) {
        el.textContent = translate(lang, key);
      }
    });
  }

  document.addEventListener('DOMContentLoaded', updateTeamTranslations);
  window.addEventListener('languagechange', updateTeamTranslations);
</script>
